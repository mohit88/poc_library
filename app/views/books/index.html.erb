<div class="login_form">

<%= form_for(user_books_path, method: :get) do |f| %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
<% end %>
  <h1>List of books</h1>

  <table>
    <thead>
    <tr>
      <th>Isbn</th>
      <th>Title</th>
      <th>Author</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>

  <tbody>
  <% @books.each do |book| %>
      <tr>
        <td><%= book.isbn %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= link_to 'Show', user_book_path(@current_user,book) %></td>
      </tr>
  <% end %>
  </tbody>
</table>

  <br>

<%= link_to 'New Book', new_user_book_path(@current_user) if @current_user.role == User::Role::ADMIN %>
<%= link_to 'My Books', user_book_user_books_path(@current_user) %>
</div>