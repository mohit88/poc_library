<% if flash[:success] %>
    <div class="alert alert-success">
      <%= flash[:success]%>
    </div>
<% end %>

<h1>User books</h1>

<table>
  <thead>
  <tr>
    <th>Isbn</th>
    <th>Title</th>
    <th>Author</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
      <tr>
        <td><%= book.isbn %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= link_to 'Return', return_user_book_path(@current_user,book) %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
